<% @distributions.each do |name, dist| -%>
Origin: <%= dist[:origin] %>
Label: <%= dist[:label] %>
Codename: <%= name %>
Architectures: <%= dist[:architectures].join(" ") %>
Components: <%= dist[:components].join(" ") %>
Description: <%= dist[:description] %>
SignWith: <%= node[:reprepro][:pgp_key] %>
<% if dist.has_key?(:pull) -%>
Pull: <%= dist[:pull].join(" ") %>
<% end -%>
<% if dist.has_key?(:update) -%>
Update: <%= dist[:update].join(" ") %>
<% end -%>

<% end -%>
