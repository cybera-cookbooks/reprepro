<VirtualHost *:<%= node[:reprepro][:listen_port] %>>
  DocumentRoot <%= @repo_dir %>
  ServerAdmin <%= node[:reprepro][:pgp_email] %>
  ServerName <%= node[:reprepro][:fqdn] %>

  <Directory "<%= @repo_dir %>">
    Options Indexes FollowSymLinks MultiViews
    Order allow,deny
    Allow from all
  </Directory>

  <Directory "<%= @repo_dir %>/conf/">
    Order allow,deny
    Deny from all
  </Directory>

  <Directory "<%= @repo_dir %>/db/">
    Order allow,deny
    Deny from all
  </Directory>

  LogLevel warn
  ErrorLog /var/log/apache2/apt_repo-error.log
  CustomLog /var/log/apache2/apt_repo-access.log combined
</VirtualHost>
